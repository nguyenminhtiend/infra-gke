apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: nginx
  namespace: argocd
spec:
  project: apps
  source:
    repoURL: https://charts.bitnami.com/bitnami
    chart: nginx
    targetRevision: CHART_VERSION_NGINX_PLACEHOLDER
    helm:
      releaseName: nginx
  destination:
    server: https://kubernetes.default.svc
    namespace: nginx
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
      - CreateNamespace=true

